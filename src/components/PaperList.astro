---
import type { Paper } from "@/utils";

const { papers, paperType } = Astro.props;
---

<div class='overflow-x-auto'>
  <table class='w-full min-w-full table-auto'>
    <thead>
      <tr>
        <th><strong>No.</strong></th>
        <th><strong>Remark</strong></th>
        <th><strong>Paper</strong></th>
      </tr>
    </thead>
    <tbody>
      {
        papers.map((paper: Paper, idx: number) => (
          <tr>
            <td>{idx + 1}</td>
            <td>{paperType}</td>
            <td>
              <div>
                <!-- <a href={paper.paper_url}>{paper.title}</a> -->
                <strong>{paper.title}</strong>
              </div>
              {paper.authors.map((author: string) => author).join(", ")}
            </td>
          </tr>
        ))
      }
      <tr></tr>
    </tbody>
  </table>
</div>
